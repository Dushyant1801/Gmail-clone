<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <style>
    
      .container{
        overflow: auto;
        scrollbar-width: 0;
      }  
    .mail{
        width: 90%;
        /* border: 1px solid black; */
        padding: 15px 15px;
    }
    .mails{
        width: 100%;
        height: 8%;
        border: 1px solid red;
        padding: 15px;
        margin-top: 8px;
       
    }
    a{
      text-decoration: none;
      color: black;
    }
  </style>
<body style="overflow:hidden;">
  
    <h1 style="margin-left:125px; " class="mt-4">Hey,<span style="color: grey; font-size:28px; 
    
    margin-left:12px"><%= foundUser.name%></span></h1>
     <button style="margin-left: 8%;" class="btn btn-info"><a href="/profile">Go back</a></button>
    <div class="container" style="background-color: white; width:100vw; height:100vh;">
        <div class="mail">
           <% foundUser.sentmails.forEach(function(elem){ %>
            <div class="mails">
                <h4><%= elem.userid.name %></h2>
                <p><%=elem.mailtext %></p>
                <button id="btn" style="outline: none; border:none; background-Color:white; color: blue;">readmore</button>
            </div>
            <% }) %>
          
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
      
</body>
</html>